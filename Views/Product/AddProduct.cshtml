@model ProductDTO
@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Add Product";
}

<div style="max-width: 800px; margin: 0 auto;">
	<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
		<h2 style="font-family: 'Playfair Display', serif; font-size: 32px; font-weight: 400; color: var(--dark-brown); font-style: italic; margin: 0;">Add Product</h2>
		<a asp-action="Index" asp-controller="Product" class="btn btn-secondary" style="border-radius: 12px; padding: 12px 24px; display: flex; align-items: center; gap: 8px;">
			<i class="bi bi-arrow-left"></i> Back
		</a>
	</div>

	<div style="background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%); border-radius: 20px; padding: 40px; box-shadow: 0 4px 20px rgba(61, 40, 23, 0.08); border: 1px solid rgba(232, 213, 196, 0.3);">
		<form asp-action="AddProduct" enctype="multipart/form-data" id="addProductForm">
			<div class="my-3">
				<label style="font-weight: 600; color: var(--dark-brown); margin-bottom: 8px; display: block;">Product Name *</label>
				<input type="text" class="form-control" asp-for="ProductName" id="ProductName" style="border-radius: 12px; border: 2px solid rgba(232, 213, 196, 0.5); padding: 12px 15px;" placeholder="Enter product name" />
				<span asp-validation-for="ProductName" class="text-danger"></span>
			</div>

			<div class="my-3">
				<label style="font-weight: 600; color: var(--dark-brown); margin-bottom: 8px; display: block;">Brand</label>
				<input type="text" class="form-control" asp-for="BrandName" id="BrandName" style="border-radius: 12px; border: 2px solid rgba(232, 213, 196, 0.5); padding: 12px 15px;" placeholder="Enter brand name" />
				<span asp-validation-for="BrandName" class="text-danger"></span>
			</div>

			<div class="my-3">
				<label style="font-weight: 600; color: var(--dark-brown); margin-bottom: 8px; display: block;">Category *</label>
				<select class="form-control" asp-for="CategoryId" asp-items="Model.CategoryList" id="CategoryId" style="border-radius: 12px; border: 2px solid rgba(232, 213, 196, 0.5); padding: 12px 15px;">
					<option value="">Select Category</option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>

			<div class="my-3">
				<label style="font-weight: 600; color: var(--dark-brown); margin-bottom: 8px; display: block;">Price (MAD) *</label>
				<input type="number" step="0.01" class="form-control" asp-for="Price" id="Price" style="border-radius: 12px; border: 2px solid rgba(232, 213, 196, 0.5); padding: 12px 15px;" placeholder="0.00" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="my-3">
				<label style="font-weight: 600; color: var(--dark-brown); margin-bottom: 8px; display: block;">Product Image</label>
				<input type="file" class="form-control" asp-for="ImageFile" id="ImageFile" accept="image/jpeg,image/jpg,image/png" style="border-radius: 12px; border: 2px solid rgba(232, 213, 196, 0.5); padding: 12px 15px;" />
				<small class="form-text text-muted" style="display: block; margin-top: 8px; color: #6c757d;">Maximum file size: 1 MB. Allowed formats: JPEG, JPG, PNG</small>
			</div>

			<div class="my-4" style="display: flex; gap: 15px; flex-wrap: wrap;">
				<button type="submit" class="btn btn-primary" style="border-radius: 12px; padding: 12px 24px; display: flex; align-items: center; gap: 8px;">
					<i class="bi bi-check-circle"></i> Add Product
				</button>
				<button type="reset" class="btn btn-secondary" onclick="resetForm()" style="border-radius: 12px; padding: 12px 24px; display: flex; align-items: center; gap: 8px;">
					<i class="bi bi-x-circle"></i> Clear Form
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		// Reset form after successful submission if success message exists
		@if (TempData["successMessage"] != null)
		{
			<text>
			document.addEventListener('DOMContentLoaded', function() {
				// Clear form fields
				document.getElementById('addProductForm').reset();
				// Scroll to top to see the success message
				window.scrollTo({ top: 0, behavior: 'smooth' });
			});
			</text>
		}

		function resetForm() {
			document.getElementById('addProductForm').reset();
		}
	</script>
}
