@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<style>
    .error-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
        background: linear-gradient(135deg, var(--primary-beige) 0%, #F9F7F2 100%);
    }

    .error-card {
        background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
        border-radius: 24px;
        padding: 60px 50px;
        box-shadow: 0 8px 32px rgba(61, 40, 23, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(232, 213, 196, 0.3);
        max-width: 700px;
        width: 100%;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .error-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #dc3545 0%, #c82333 100%);
    }

    .error-icon {
        font-size: 120px;
        color: #dc3545;
        margin-bottom: 30px;
        opacity: 0.7;
    }

    .error-card h1 {
        font-family: 'Playfair Display', serif;
        font-size: 48px;
        font-weight: 400;
        color: var(--dark-brown);
        margin-bottom: 20px;
        font-style: italic;
    }

    .error-card h2 {
        font-size: 24px;
        color: var(--light-brown);
        margin-bottom: 30px;
        font-weight: 400;
    }

    .error-card p {
        font-size: 16px;
        color: var(--text-dark);
        line-height: 1.8;
        margin-bottom: 15px;
    }

    .error-code {
        background: rgba(220, 53, 69, 0.1);
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-block;
        margin: 20px 0;
        font-family: monospace;
        color: #dc3545;
        font-weight: 600;
    }

    .error-actions {
        margin-top: 40px;
    }

    .error-actions .btn {
        margin: 5px;
        padding: 12px 30px;
        border-radius: 12px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--dark-brown) 0%, var(--light-brown) 100%);
        color: var(--white);
        border: none;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(61, 40, 23, 0.2);
    }
</style>

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <h1>Oops!</h1>
        <h2>Something went wrong</h2>
        <p>An error occurred while processing your request. We're sorry for the inconvenience.</p>
        
        @if (Model?.ShowRequestId == true)
        {
            <div class="error-code">
                <strong>Request ID:</strong> @Model.RequestId
            </div>
        }

        <div class="error-actions">
            <a href="/Home/Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Go to Home
            </a>
            <a href="javascript:history.back()" class="btn btn-secondary" style="background: var(--light-brown); color: var(--white); border: none;">
                <i class="bi bi-arrow-left"></i> Go Back
            </a>
        </div>

        @if (Model?.ShowRequestId == true)
        {
            <p style="font-size: 14px; color: var(--light-brown); margin-top: 30px;">
                If this problem persists, please contact support with the Request ID above.
            </p>
        }
    </div>
</div>
