@model CheckoutModel
@{
	ViewData["Title"] = "Checkout";
}

<link href="~/css/identity.css" rel="stylesheet" />

<style>
	.checkout-container {
		max-width: 900px;
		margin: 40px auto;
		padding: 0 20px;
	}

	.checkout-header {
		background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
		border-radius: 20px;
		padding: 30px;
		margin-bottom: 30px;
		box-shadow: 0 4px 20px rgba(61, 40, 23, 0.08);
		border: 1px solid rgba(232, 213, 196, 0.3);
		text-align: center;
	}

	.checkout-header h2 {
		font-family: 'Playfair Display', serif;
		font-size: 36px;
		font-weight: 400;
		color: var(--dark-brown);
		margin: 0;
		font-style: italic;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 15px;
	}

	.checkout-form-container {
		background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
		border-radius: 20px;
		padding: 40px;
		box-shadow: 0 4px 20px rgba(61, 40, 23, 0.08);
		border: 1px solid rgba(232, 213, 196, 0.3);
	}

	.checkout-form-container .form-floating {
		margin-bottom: 25px;
	}

	.checkout-form-container .form-floating > .form-control {
		background-color: var(--white);
		border: 2px solid rgba(232, 213, 196, 0.5);
		border-radius: 12px;
		padding: 16px 20px;
		font-size: 16px;
		color: var(--text-dark);
		transition: all 0.3s ease;
		height: auto;
	}

	.checkout-form-container .form-floating > .form-control:focus {
		border-color: var(--light-brown);
		box-shadow: 0 0 0 0.2rem rgba(139, 111, 71, 0.15);
	}

	.checkout-form-container .form-floating > label {
		color: var(--light-brown);
		padding: 16px 20px;
		font-weight: 500;
	}

	.checkout-submit-btn {
		width: 100%;
		padding: 16px;
		background: linear-gradient(135deg, var(--dark-brown) 0%, var(--light-brown) 100%);
		color: white;
		border: none;
		border-radius: 12px;
		font-size: 18px;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 10px;
	}

	.checkout-submit-btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(61, 40, 23, 0.2);
	}

	.form-label {
		color: var(--dark-brown);
		font-weight: 600;
		margin-bottom: 8px;
		display: block;
	}
</style>

<div class="checkout-container">
	<div class="checkout-header">
		<h2>
			<i class="bi bi-credit-card"></i>
			Checkout
		</h2>
	</div>

	<div class="checkout-form-container">
		<form asp-action="Checkout">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

			<div class="form-floating">
				<input type="text" class="form-control" asp-for="Name" placeholder="Full Name" />
				<label asp-for="Name">Full Name *</label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input type="email" class="form-control" asp-for="Email" placeholder="Email Address" />
				<label asp-for="Email">Email Address *</label>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input type="tel" class="form-control" asp-for="MobileNumber" placeholder="Mobile Number" />
				<label asp-for="MobileNumber">Mobile Number *</label>
				<span asp-validation-for="MobileNumber" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<textarea class="form-control" asp-for="Address" placeholder="Delivery Address" style="height: 120px; resize: vertical;"></textarea>
				<label asp-for="Address">Delivery Address *</label>
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<select asp-for="PaymentMethod" class="form-control">
					<option value="">Select Payment Method</option>
					@foreach (var method in Enum.GetValues(typeof(ProjetDotNet.Constants.PaymentMethods)))
					{
						<option value="@method.ToString()">@method.ToString()</option>
					}
				</select>
				<label asp-for="PaymentMethod">Payment Method *</label>
				<span asp-validation-for="PaymentMethod" class="text-danger"></span>
			</div>

			<button type="submit" class="checkout-submit-btn">
				<i class="bi bi-arrow-right"></i> Place Order
			</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
