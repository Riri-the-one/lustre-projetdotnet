@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<link href="~/css/identity.css" rel="stylesheet" />

<div class="confirmation-container">
    <div class="confirmation-card">
        <h1>Account Created!</h1>
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    Your account has been successfully created. You can now sign in to your account.
                </p>
                <p>
                    <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary" style="display: inline-block; margin-top: 20px;">Confirm Your Account</a>
                </p>
                <p style="font-size: 14px; color: var(--light-brown); margin-top: 20px;">
                    <i>Note: In development mode, email confirmation is not required. You can sign in directly.</i>
                </p>
            }
            else
            {
                <p>
                    Please check your email to confirm your account.
                </p>
            }
        }
        <p style="margin-top: 30px;">
            <a href="/Identity/Account/Login" class="btn btn-primary">Go to Login</a>
        </p>
    </div>
</div>

