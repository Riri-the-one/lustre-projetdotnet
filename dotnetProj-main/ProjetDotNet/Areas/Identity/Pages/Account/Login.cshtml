@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="~/css/identity.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card">
        <h1>Welcome Back</h1>
        <h2>Sign in to your account</h2>
        <hr />
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3" style="margin-top: 15px;">
                <label asp-for="Input.RememberMe" class="form-label" style="display: flex; align-items: center; cursor: pointer;">
                    <input class="form-check-input" asp-for="Input.RememberMe" style="margin-right: 8px;" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
            <div style="margin-top: 25px; text-align: center;">
                <p style="margin-bottom: 10px;">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p style="margin-bottom: 10px;">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
