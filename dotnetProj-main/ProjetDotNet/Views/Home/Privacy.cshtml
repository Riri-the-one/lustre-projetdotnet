@{
    ViewData["Title"] = "About Us - Lustre";
}

<style>
    .about-hero {
        background: linear-gradient(135deg, var(--accent-pink) 0%, var(--primary-beige) 100%);
        padding: 100px 20px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .about-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(232, 213, 196, 0.3) 0%, transparent 70%);
        border-radius: 50%;
    }

    .about-hero h1 {
        font-family: 'Playfair Display', serif;
        font-size: 64px;
        font-weight: 300;
        color: var(--dark-brown);
        margin-bottom: 20px;
        font-style: italic;
        letter-spacing: -1px;
        position: relative;
        z-index: 1;
    }

    .about-hero p {
        font-size: 24px;
        color: var(--light-brown);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
        position: relative;
        z-index: 1;
    }

    .about-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 80px 20px;
    }

    .about-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
        margin-bottom: 80px;
    }

    .about-content.reverse {
        direction: rtl;
    }

    .about-content.reverse > * {
        direction: ltr;
    }

    .about-text h2 {
        font-family: 'Playfair Display', serif;
        font-size: 42px;
        font-weight: 300;
        color: var(--dark-brown);
        margin-bottom: 25px;
        font-style: italic;
    }

    .about-text p {
        font-size: 18px;
        color: var(--text-dark);
        line-height: 1.8;
        margin-bottom: 20px;
    }

    .about-image {
        width: 100%;
        height: 400px;
        border-radius: 20px;
        background: linear-gradient(135deg, var(--accent-pink) 0%, var(--light-brown) 100%);
        box-shadow: 0 8px 32px rgba(61, 40, 23, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .about-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(232, 213, 196, 0.2) 0%, rgba(139, 111, 71, 0.2) 100%);
    }

    .about-image i {
        font-size: 120px;
        color: rgba(61, 40, 23, 0.3);
        position: relative;
        z-index: 1;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-top: 60px;
    }

    .value-card {
        background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(61, 40, 23, 0.08);
        border: 1px solid rgba(232, 213, 196, 0.3);
        transition: all 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 32px rgba(61, 40, 23, 0.15);
    }

    .value-card-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 25px;
        background: linear-gradient(135deg, var(--accent-pink) 0%, rgba(232, 213, 196, 0.5) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        color: var(--dark-brown);
    }

    .value-card h3 {
        font-family: 'Playfair Display', serif;
        font-size: 24px;
        font-weight: 400;
        color: var(--dark-brown);
        margin-bottom: 15px;
        font-style: italic;
    }

    .value-card p {
        font-size: 16px;
        color: var(--text-dark);
        line-height: 1.6;
    }

    .team-section {
        background: linear-gradient(135deg, var(--primary-beige) 0%, #F9F7F2 100%);
        padding: 80px 20px;
        margin-top: 60px;
    }

    .team-section h2 {
        font-family: 'Playfair Display', serif;
        font-size: 42px;
        font-weight: 300;
        color: var(--dark-brown);
        text-align: center;
        margin-bottom: 50px;
        font-style: italic;
    }

    .contact-section {
        background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
        padding: 80px 20px;
        text-align: center;
    }

    .contact-section h2 {
        font-family: 'Playfair Display', serif;
        font-size: 42px;
        font-weight: 300;
        color: var(--dark-brown);
        margin-bottom: 30px;
        font-style: italic;
    }

    .contact-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        max-width: 900px;
        margin: 0 auto;
    }

    .contact-item {
        padding: 30px;
    }

    .contact-item i {
        font-size: 48px;
        color: var(--light-brown);
        margin-bottom: 20px;
    }

    .contact-item h3 {
        font-size: 20px;
        color: var(--dark-brown);
        margin-bottom: 10px;
        font-weight: 600;
    }

    .contact-item p {
        font-size: 16px;
        color: var(--text-dark);
    }

    @@media (max-width: 768px) {
        .about-hero h1 {
            font-size: 42px;
        }

        .about-hero p {
            font-size: 18px;
        }

        .about-content {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .about-text h2 {
            font-size: 32px;
        }

        .values-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<!-- Hero Section -->
<section class="about-hero">
    <h1>About Lustre</h1>
    <p>Where Elegance Meets Excellence in Skincare</p>
</section>

<!-- Story Section -->
<section class="about-section">
    <div class="about-content">
        <div class="about-text">
            <h2>Our Story</h2>
            <p>
                Founded with a passion for beauty and elegance, Lustre was born from the vision of creating premium skincare products that celebrate your natural radiance. We believe that true beauty comes from within, and our carefully curated collection is designed to enhance and nurture your skin's natural glow.
            </p>
            <p>
                Every product in our collection is thoughtfully crafted using the finest ingredients, combining traditional wisdom with modern innovation. We are committed to providing you with skincare solutions that are not only effective but also luxurious and elegant.
            </p>
        </div>
        <div class="about-image">
            <i class="bi bi-flower1"></i>
        </div>
    </div>

    <div class="about-content reverse">
        <div class="about-text">
            <h2>Our Mission</h2>
            <p>
                At Lustre, our mission is to empower you to feel confident and beautiful in your own skin. We strive to create products that are gentle yet effective, luxurious yet accessible, and always aligned with our core values of quality, integrity, and elegance.
            </p>
            <p>
                We are dedicated to continuous innovation, ensuring that our customers always have access to the latest advancements in skincare technology while maintaining our commitment to natural, high-quality ingredients.
            </p>
        </div>
        <div class="about-image">
            <i class="bi bi-heart"></i>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="about-section">
    <h2 style="font-family: 'Playfair Display', serif; font-size: 42px; font-weight: 300; color: var(--dark-brown); text-align: center; margin-bottom: 50px; font-style: italic;">Our Values</h2>
    <div class="values-grid">
        <div class="value-card">
            <div class="value-card-icon">
                <i class="bi bi-star-fill"></i>
            </div>
            <h3>Quality</h3>
            <p>We source only the finest ingredients and maintain the highest standards in every product we create.</p>
        </div>
        <div class="value-card">
            <div class="value-card-icon">
                <i class="bi bi-shield-check"></i>
            </div>
            <h3>Integrity</h3>
            <p>Transparency and honesty guide everything we do, from product formulation to customer service.</p>
        </div>
        <div class="value-card">
            <div class="value-card-icon">
                <i class="bi bi-gem"></i>
            </div>
            <h3>Elegance</h3>
            <p>We believe beauty should be effortless and timeless, reflected in every aspect of our brand.</p>
        </div>
        <div class="value-card">
            <div class="value-card-icon">
                <i class="bi bi-people"></i>
            </div>
            <h3>Care</h3>
            <p>Your skin's health and your satisfaction are at the heart of everything we do.</p>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="team-section">
    <div style="max-width: 1200px; margin: 0 auto;">
        <h2>Why Choose Lustre?</h2>
        <div class="values-grid">
            <div class="value-card">
                <div class="value-card-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h3>Premium Ingredients</h3>
                <p>Carefully selected natural and organic ingredients that work in harmony with your skin.</p>
            </div>
            <div class="value-card">
                <div class="value-card-icon">
                    <i class="bi bi-award"></i>
                </div>
                <h3>Expert Formulation</h3>
                <p>Developed by skincare experts with years of experience in the beauty industry.</p>
            </div>
            <div class="value-card">
                <div class="value-card-icon">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <h3>Skin-Friendly</h3>
                <p>Tested and proven to be gentle on all skin types, including sensitive skin.</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <h2>Get In Touch</h2>
    <p style="font-size: 18px; color: var(--text-dark); margin-bottom: 50px; max-width: 600px; margin-left: auto; margin-right: auto;">
        We'd love to hear from you. Whether you have a question, feedback, or just want to say hello, we're here for you.
    </p>
    <div class="contact-info">
        <div class="contact-item">
            <i class="bi bi-telephone"></i>
            <h3>Phone</h3>
            <p>00 24 34 34 24</p>
        </div>
        <div class="contact-item">
            <i class="bi bi-envelope"></i>
            <h3>Email</h3>
            <p>sg@gmail.com</p>
        </div>
        <div class="contact-item">
            <i class="bi bi-geo-alt"></i>
            <h3>Location</h3>
            <p>Casablanca, Morocco</p>
        </div>
    </div>
</section>
