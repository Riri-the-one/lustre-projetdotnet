@{
	ViewData["Title"] = "Order Failed";
}

<link href="~/css/identity.css" rel="stylesheet" />

<style>
	.order-result-container {
		min-height: calc(100vh - 200px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 60px 20px;
		background: linear-gradient(135deg, var(--primary-beige) 0%, #F9F7F2 100%);
	}

	.order-result-card {
		background: linear-gradient(135deg, #FFFFFF 0%, #FEFCF9 100%);
		border-radius: 24px;
		padding: 60px 50px;
		box-shadow: 0 8px 32px rgba(61, 40, 23, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
		border: 1px solid rgba(232, 213, 196, 0.3);
		max-width: 600px;
		width: 100%;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.order-result-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, #dc3545 0%, #c82333 100%);
	}

	.error-icon {
		font-size: 120px;
		color: #dc3545;
		margin-bottom: 30px;
		animation: shake 0.5s ease-out;
	}

	@@keyframes shake {
		0%, 100% { transform: translateX(0); }
		25% { transform: translateX(-10px); }
		75% { transform: translateX(10px); }
	}

	.order-result-card h1 {
		font-family: 'Playfair Display', serif;
		font-size: 42px;
		font-weight: 400;
		color: var(--dark-brown);
		margin-bottom: 20px;
		font-style: italic;
	}

	.order-result-card p {
		font-size: 18px;
		color: var(--text-dark);
		line-height: 1.8;
		margin-bottom: 40px;
	}

	.order-actions {
		display: flex;
		gap: 15px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.order-actions .btn {
		padding: 14px 28px;
		border-radius: 12px;
		text-decoration: none;
		display: inline-block;
		transition: all 0.3s ease;
		font-weight: 600;
	}

	.btn-primary {
		background: linear-gradient(135deg, var(--dark-brown) 0%, var(--light-brown) 100%);
		color: var(--white);
		border: none;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(61, 40, 23, 0.2);
	}

	.btn-secondary {
		background: var(--white);
		color: var(--dark-brown);
		border: 2px solid var(--light-brown);
	}

	.btn-secondary:hover {
		background: var(--accent-pink);
		border-color: var(--accent-pink);
	}
</style>

<div class="order-result-container">
	<div class="order-result-card">
		<div class="error-icon">
			<i class="bi bi-x-circle-fill"></i>
		</div>
		<h1>Order Failed</h1>
		<p>
			We're sorry, but there was an issue processing your order. Please try again or contact our support team if the problem persists.
		</p>
		<div class="order-actions">
			<a href="/Cart/GetUserCart" class="btn btn-primary">
				<i class="bi bi-cart"></i> Back to Cart
			</a>
			<a href="/Home/Index" class="btn btn-secondary">
				<i class="bi bi-house"></i> Go to Home
			</a>
		</div>
	</div>
</div>
